<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userProfile"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bogon Park"
        android:id="@+id/userId"
        android:layout_below="@+id/userNickName"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bo"
        android:id="@+id/userNickName"
        android:layout_below="@+id/userProfile"
        android:layout_alignRight="@+id/userId"
        android:layout_alignEnd="@+id/userId" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userProfilePath"
        android:layout_below="@+id/userId"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kakaologout_btn"
        android:layout_below="@+id/userProfilePath"
        android:onClick="onClick"
        android:text="Logout"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/disconnect_btn"
        android:layout_below="@+id/kakaologout_btn"
        android:onClick="onClick"
        android:text="Disconnect"
        />
</RelativeLayout>
